{
  "appId": "com.andrewlim.mohe",
  "appName": "Mohe",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "iosScheme": "capacitor",
    "hostname": "localhost",
    "allowNavigation": [
      "mohe.today",
      "*.mohe.today",
      "https://mohe.today/*",
      "https://*.mohe.today/*"
    ]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "backgroundColor": "#ffffff",
      "androidSplashResourceName": "splash",
      "androidScaleType": "CENTER_CROP",
      "iosContentMode": "scaleAspectFit",
      "showSpinner": false,
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "App": {
      "launchShowDuration": 0
    },
    "CapacitorHttp": {
      "enabled": true
    }
  },
  "android": {
    "allowMixedContent": true,
    "backgroundColor": "#ffffff"
  },
  "ios": {
    "scheme": "mohe",
    "backgroundColor": "#ffffff",
    "webContentsDebuggingEnabled": true
  }
}
